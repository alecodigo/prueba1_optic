<menuitem id="to_do_list_menu_root" name="ToDolist"/>
	<menuitem id="to_do_list_menu" name="ToDolist" parent="to_do_list_menu_root"/>
		<menuitem id="task_menu" name="Task" parent="to_do_list_menu" action="to_do_list_action"/>
	<menuitem id="training_menu" name="Training" parent="to_do_list_menu_root"/>
		<menuitem id="training_menu_form" name="Training" parent="training_menu" action="training_action"/>
<menuitem id="configuracion_menu" name="Configuración" parent="to_do_list_menu_root" />
